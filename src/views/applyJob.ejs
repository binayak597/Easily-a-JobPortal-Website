<!-- views/applyjob.ejs -->

<div style="min-width: 420px;" class="d-flex flex-column me-auto w-50">
  <h1 class="mt-5 mb-4 header">Fill Your Details</h1>

<% if(job && userFound) {%>
  <div class="border border-secondary-subtle px-4 py-3">
    <form action="/job/apply" method="post" enctype="multipart/form-data">
      <input type="hidden" name="jobId" class="form-control" value="<%= job.id %>">
      <input type="hidden" name="userId" class="form-control" value="<%= userFound.id %>">
      <input type="hidden" name="userEmail" class="form-control" value="<%= userFound.email %>">
  
      <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= userFound.name %>" required>
        </div>
      
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= userFound.email %>" required>
      </div>
  
      <div class="mb-3">
          <label for="contact" class="form-label">Contact Number</label>
          <input type="text" class="form-control" id="contact" name="contact" required>   
      </div>
  
      <div class="mb-3">
          <label for="resume" class="form-label">Upload Resume</label>
          <input type="file" class="form-control" id="resume" name="resume" accept=".doc, .pdf" required>   
      </div>
      
      <button type="submit" class="btn btn-primary px-4">Apply Now</button>
    </form>
  </div>
<% } %>
</div>